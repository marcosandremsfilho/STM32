#include "RobotDirection.h"

RobotDirection::RobotDirection() {
	// TODO Auto-generated constructor stub

}

void RobotDirection :: forward(MOTOR M1, MOTOR M2, int time, int PWM) {
	M1.CW(PWM);
	M2.CW(PWM);

	HAL_Delay(time);
}

void RobotDirection :: backward(MOTOR M1, MOTOR M2, int time, int PWM) {
	M1.CCW(PWM);
	M2.CCW(PWM);

	HAL_Delay(time);
}

void RobotDirection :: left(MOTOR M1, MOTOR M2, int time, int PWM) {
	M1.CW(PWM);
	M2.CCW(PWM);

	HAL_Delay(time);
}

void RobotDirection :: right(MOTOR M1, MOTOR M2, int time, int PWM) {
	M1.CCW(PWM);
	M2.CW(PWM);

	HAL_Delay(time);
}

RobotDirection::~RobotDirection() {
	// TODO Auto-generated destructor stub
}

