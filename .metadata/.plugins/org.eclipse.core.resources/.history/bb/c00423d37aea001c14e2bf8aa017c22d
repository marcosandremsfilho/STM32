#include "main.h"
#include "MOTOR.h"

#ifndef ROBOTDIRECTION_H_
#define ROBOTDIRECTION_H_

class RobotDirection : public MOTOR{
protected:
	MOTOR _M1(_Port1, _Pin1, _Port2, _Pin2, _htim);
	MOTOR _M2;
	int _time, _PWM;
public:
	RobotDirection(MOTOR, MOTOR, int, int);
	void forward(MOTOR, MOTOR, int, int);
	void backward(MOTOR, MOTOR, int, int);
	void left(MOTOR, MOTOR, int, int);
	void right(MOTOR, MOTOR, int, int);

	virtual ~RobotDirection();
};

#endif /* ROBOTDIRECTION_H_ */
