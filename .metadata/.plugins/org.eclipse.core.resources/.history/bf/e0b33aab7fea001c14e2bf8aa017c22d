#include "main.h"
#include "MOTOR.h"
#include "RobotDirection.h"

extern TIM_HandleTypeDef htim3;

MOTOR M1(MOTOR1_Pin1_GPIO_Port, MOTOR1_Pin1_Pin, MOTOR1_Pin2_GPIO_Port, MOTOR1_Pin2_Pin, &htim1);
MOTOR M2(MOTOR2_Pin1_GPIO_Port, MOTOR2_Pin1_Pin, MOTOR2_Pin2_GPIO_Port, MOTOR2_Pin2_Pin, &htim1);
RobotDirection robo (&M1,&M2);
int aux = 255;

void mainCpp() {
	robo.forward(100, aux);
	robo.backward(100, 255 - aux);

	aux-=50;

	HAL_Delay(500);

	if(aux < 0) {
		aux =256;
	}
}

