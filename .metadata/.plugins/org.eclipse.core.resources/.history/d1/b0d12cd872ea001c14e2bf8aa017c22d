#include "main.h"
#include "MotorControl.h"
#include "MOTOR.h"

void MotorControl :: frente(int time, uint8_t PWM) {
	HAL_GPIO_WritePin(_Port1, _Pin1, GPIO_PIN_RESET);
	HAL_GPIO_WritePin(_Port2, _Pin2, GPIO_PIN_SET);
	_htim->Instance->CCR3 = (uint32_t) PWM;
	HAL_Delay(time);
}

void MotorControl :: tras(int time, uint8_t PWM) {
	HAL_GPIO_WritePin(_Port1, _Pin1, GPIO_PIN_SET);
	HAL_GPIO_WritePin(_Port2, _Pin2, GPIO_PIN_RESET);
	_htim->Instance->CCR3 = (uint32_t) PWM;
	HAL_Delay(time);
}

MotorControl::~MotorControl() {

}

